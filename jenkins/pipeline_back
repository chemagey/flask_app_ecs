pipeline {   
  agent {
    node {
      label 'master'
    }  
  }
  stages {
    stage('checkout') {
      steps {
        checkout scm
        sh 'git clone https://github.com/chemagey/savana-test.git '
        sh 'cd savana-test/docker'
      }
    }
   stage('Build Docker') {
        sh "sudo docker build -t flask-app:latest ."
        sh 'docker image tag $DOCKER_HUB_REPO:latest $DOCKER_HUB_REPO:$BUILD_NUMBER
   }
  
    stage('init') {
      steps {
        sh 'terraform init'
      }
    }
    stage('plan') {
      steps {
        sh 'terraform plan'
      }
    }
    stage('apply') {
      steps {
        sh 'terraform apply --auto-approve'
        cleanWs()
      }
    }
           
}